<p><%= form.text_field :wiki_template, :required => false %></p>
<p id="watchers_form"><label><%= l(:label_default_watchers) %></label>
  <% @project.users.sort.each do |user| -%>
      <label class="floating"><%= check_box_tag "user_#{user.id}", user.id, project.is_default_watcher(user), :onchange =>'change(this)' %> <%=h user %></label>
  <% end -%>
</p>

<p><%= form.hidden_field :default_watchers, :required => false %></p>

<% content_for :header_tags do %>
    <%= javascript_include_tag('watchers.js', :plugin => 'chiliproject_tipit_extensions') %>
<% end %>
